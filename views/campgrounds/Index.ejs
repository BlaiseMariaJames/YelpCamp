<% layout('/layouts/BoilerPlate') %>
    <h1>All Campgrounds</h1>
    <% if(!error) { %>
        <button><a href="/"><b>Go Home</b></a></button>
        <button><a href="/campgrounds/new"><b>New</b></a></button>
        <br><br>
        <table border="1px" width="750px">
            <tr>
                <th>Title</th>
                <th>Price</th>
                <th>Location</th>
                <th colspan="2">Operations</th>
            </tr>
            <% for (let campground of campgrounds) { %>
                <tr>
                    <td>
                        <a href="/campgrounds/<%=campground._id%> ">
                            <b>
                                <%=campground.title%>
                            </b>
                        </a>
                    </td>
                    <td align="center">
                        Rs. <%=campground.price%>/-
                    </td>
                    <td>
                        <%=campground.location%>
                    </td>
                    <td><a href="/campgrounds/<%=campground._id%>/edit"><b>Edit</b></a></td>
                    <td><a href="/campgrounds/<%=campground._id%>/remove"><b>Remove</b></a></td>
                </tr>
                <% } %>
        </table>
        <% } else { %>
            <p>
                <%= error %>
            </p>
            <button><a href="/"><b>Go Home</b></a></button>
            <button><a href="/campgrounds/new"><b>New</b></a></button>
            <% } %>